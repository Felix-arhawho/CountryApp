
@{
    ViewBag.Title = "Create Country";
}

<h3>Create Country</h3>
<form class="form-horizontal">
    <div class="form-group">
        @Html.Label("Country", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            <input type="text" class="form-control input-lg" placeholder="Country" ng-model="country.CountryName" />
        </div>
    </div><br />

    <div class="col-md-offset-3 col-md-4">
        <input type="button" ng-click="createCountry(country)" id="" value="Register" class="btn btn-success" />
    </div>
</form>
<br /><br />